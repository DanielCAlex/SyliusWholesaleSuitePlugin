<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="SkyBoundTech\SyliusWholesaleSuitePlugin\Entity\WholesaleRuleset"
                       table="skyboundtech_wholesale_ruleset">

        <id name="id" column="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" column="name" type="string" length="100"
               nullable="false" unique="true"/>

        <field name="description" column="description" type="string" length="255"
               nullable="true"/>

        <field name="enabled" column="enabled" type="boolean" nullable="false"/>

        <one-to-many field="quantityStepRules"
                     target-entity="SkyBoundTech\SyliusWholesaleSuitePlugin\Entity\WholesaleRuleQuantityStep"
                     mapped-by="ruleset">
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>
    </mapped-superclass>
</doctrine-mapping>
