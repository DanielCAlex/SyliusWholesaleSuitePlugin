<div class="ui grid">
    {{ form_start(form) }}
    <div class="six wide column">
        {{ form_row(form.name) }}
    </div>
    <div class="six wide column">
        {{ form_row(form.scope)}}
        <div class="ui yellow message" id="scope-warning">
        </div>
    </div>
    <div class="twelve wide column">
        {{ form_row(form.description) }}
    </div>
    {{ form_end(form) }}
</div>
