{{ form_errors(form) }}
<div class="ui grid">
    {{ form_start(form) }}
    <div class="eight wide column">
        {{ form_row(form.name) }}
        {{ form_row(form.type) }}
    </div>
    <div class="eight wide column">
        {{ form_row(form.scope) }}

        <div id="ruleset-taxons">
            {{ form_row(form.rulesetTaxons, {
                'label': 'Choose Ruleset Taxonomies'
            }) }}
        </div>

        <div id="ruleset-products">
            {{ form_row(form.rulesetProducts, {
                'label': 'Choose Ruleset Products'
            }) }}
        </div>
    </div>
    <div class="sixteen wide column">
        {{ form_row(form.description) }}
    </div>
    <div class="twelve wide column">
        {{ form_row(form.isEnabled) }}
    </div>
</div>
