{{ form_errors(form) }}
<div class="ui grid">
    {{ form_start(form) }}
    <div class="twelve wide column">
        {{ form_row(form.isEnabled) }}
    </div>
    <div class="eight wide column">
        {{ form_row(form.name) }}
        {{ form_row(form.type) }}
    </div>
    <div class="eight wide column">
        {{ form_row(form.scope) }}
        {{ form_row(form.rulesetTaxons) }}
    </div>
    <div class="sixteen wide column">
        {{ form_row(form.description) }}
    </div>
</div>
