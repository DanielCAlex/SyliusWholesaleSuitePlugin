{% set ruleTypes = ['Quantity Step Rules', 'Tiered Pricing Rules', 'Minimum-Maximum Purchase Rules', 'Backorder Rules'] %}

<div class="ui tabular menu">
    {% for ruleType in ruleTypes %}
        <a class="rule-tabs item {% if ruleType == ruleTypes[0] %}active{% endif %}" data-tab="{{ ruleType }}">
            {{ ruleType }}
        </a>
    {% endfor %}
</div>
{% for ruleType in ruleTypes %}
    <div class="ui tab segment {% if ruleType == ruleTypes[0] %}active{% endif %}" data-tab="{{ ruleType }}">
        <div class="ui top attached tabular menu">
            <a class="item active" data-tab="{{ ruleType }}/a">{{ ruleType }} By Taxonomy</a>
            <a class="item" data-tab="{{ ruleType }}/b">{{ ruleType }} By Product</a>
            <a class="item" data-tab="{{ ruleType }}/c">{{ ruleType }} By Product Variant</a>
        </div>
        <div class="ui bottom attached tab segment {% if ruleType == ruleTypes[0] %}active{% endif %}"
             data-tab="{{ ruleType }}/a"></div>
        <div class="ui bottom attached tab segment" data-tab="{{ ruleType }}/b"></div>
        <div class="ui bottom attached tab segment" data-tab="{{ ruleType }}/c"></div>
    </div>
{% endfor %}
